@model IEnumerable<OnlineTermWorkSubmission.Models.Lab>

@{
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>viewlabs</title>
</head>
<body>
    <p>

        @Html.ActionLink("CREATE NEW LAB", "createlabs", new { subId = ViewBag.sid , fid = ViewBag.id })

    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subjects.subject_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lab_no)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lab_startdate)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subjects.subject_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lab_no)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lab_startdate)
            </td>
            <td>
                @Html.ActionLink("Edit", "editlabs", new { labId=item.lab_id, subId=ViewBag.sid, fid=ViewBag.id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.lab_id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
