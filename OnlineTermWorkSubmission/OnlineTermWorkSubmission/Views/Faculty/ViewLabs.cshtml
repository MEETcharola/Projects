@model IEnumerable<OnlineTermWorkSubmission.Models.Lab>

@{
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>viewlabs</title>
</head>
<body>
    <div class="jumbotron">

        @Html.ActionLink("CREATE NEW LABS", "CreateLabs", new { subId = ViewBag.sid, fid = ViewBag.id }) |
        @Html.ActionLink("Back To Subjects", "ViewSubject", new { id = ViewBag.id })

    </div>

    <div>
        @Html.DisplayNameFor(model => model.Subjects.subject_name) : @ViewBag.subname
    </div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.lab_no)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lab_startdate)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.lab_no)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lab_startdate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditLabs", new { labId = item.lab_id, subId = ViewBag.sid, fid = ViewBag.id }) |
                    @Html.ActionLink("Delete", "DeleteLabs", new { labId = item.lab_id, subId = ViewBag.sid, fid = ViewBag.id }) |
                    @Html.ActionLink("Assignments", "ViewAssignments", new { lid = item.lab_id, sid = ViewBag.sid, id = ViewBag.id })
                </td>
            </tr>
        }

    </table>


</body>
</html>
