@model IEnumerable<OnlineTermWorkSubmission.Models.Student>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewEnrolledStudent</title>
</head>
<body>
    <p>
        @Html.ActionLink("Enroll Students", "EnrollStudent", new { subId = ViewBag.sid, fid = ViewBag.id })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Division)
            </th>
            
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Branch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semester)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Division)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Student_Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Student_Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Student_Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
