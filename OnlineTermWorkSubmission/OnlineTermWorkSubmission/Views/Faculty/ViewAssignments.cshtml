@model IEnumerable<OnlineTermWorkSubmission.Models.Assignment>

@{
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>viewassignments</title>
</head>
<body>
    <div class="jumbotron">

        @Html.ActionLink("CREATE NEW ASSIGNMENT", "CreateAssignments", new { labId = ViewBag.lid, subId = ViewBag.sid, fid = ViewBag.id }) | 
        @Html.ActionLink("Back To Labs", "ViewLabs", new {sid = ViewBag.sid ,id = ViewBag.id })

    </div>
    
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Labs.lab_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.assignment_text)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Labs.lab_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.assignment_text)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditAssignments", new { id = item.assignment_id, labId = ViewBag.lid, subId = ViewBag.sid, fid = ViewBag.id }) |
                    @Html.ActionLink("Delete", "DeleteAssignments", new { id = item.assignment_id, labId = ViewBag.lid, subId = ViewBag.sid, fid = ViewBag.id })
                </td>
            </tr>
        }

    </table>
</body>
</html>
