@model IEnumerable<OnlineTermWorkSubmission.Models.Assignment>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>viewassignments</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "CreateAssignments", new { labId = ViewBag.lid, subId = ViewBag.sid, fid = ViewBag.id })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Labs.lab_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.assignment_text)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Labs.lab_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.assignment_text)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.assignment_id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.assignment_id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
